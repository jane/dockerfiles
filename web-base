# vim: ft=dockerfile
FROM mhart/alpine-node:10
LABEL repo="janedev/base-dev"
LABEL maintainer="zac@zacanger.com"
RUN apk update && \
    apk upgrade && \
    apk --no-cache add curl tzdata ca-certificates wget && \
    mv /usr/share/zoneinfo/America/Denver /etc/localtime && \
    echo "America/Denver" > /etc/timezone && \
    apk del tzdata
ENV TERM=xterm-256color
