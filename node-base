FROM node:10-alpine
LABEL repo="janedev/node-base"
LABEL maintainer="zac@zacanger.com"
# hadolint ignore=DL3018
RUN apk add --no-cache \
    ca-certificates \
    curl \
    g++ \
    git \
    make \
    python2 \
    tzdata \
    wget && \
    mv /usr/share/zoneinfo/America/Denver /etc/localtime && \
    echo "America/Denver" > /etc/timezone && \
    apk del tzdata
ENV TERM xterm-256color

# vim: ft=dockerfile
